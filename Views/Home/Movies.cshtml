@{
    ViewData["Title"] = "Movies";
    ViewData["Tab"] = "Movies";

}

@model Assignment3.Models.NewMovie

<div class="text-center">
    <h1>@ViewData["Title"]</h1>

    <p>Use this page to enter movies.</p>
</div>
<br />

<form asp-action="Movies" method="post">
    <div>
        <label asp-for="Category">Category</label>
        <select id="Category" asp-for="Category">
            <option value="">Select an option</option>
            <option value="Action/Adventure">Action/Adventure</option>
            <option value="Comedy">Comedy</option>
            <option value="Drama">Drama</option>
            <option value="Family">Family</option>
            <option value="Horror/Suspense">Horror/Suspense</option>
            <option value="Miscellaneous">Miscellaneous</option>
            <option value="Television">Television</option>
            <option value="VHS">VHS</option>
        </select>
    </div>
    <div>
        <label asp-for="Title">Title</label>
        <input id="Title" asp-for="Title" />
    </div>
    <div>
        <label asp-for="Year">Year</label>
        <input id="Title" asp-for="Title" />
    </div>
    <div>
        <label asp-for="Director">Director</label>
        <input id="Director" asp-for="Director" />
    </div>
    <div>
        <label asp-for="Rating">Rating</label>
        <select id="Rating" asp-for="Rating">
            <option value="">Select an option</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>
    <div>
        <label asp-for="Edited">Edited</label>
        <input id="Edited" asp-for="Edited" />

    </div>
    <div>
        <label asp-for="Lent">Lent To</label>
        <input id="Lent" asp-for="Lent" />
    </div>
    <div>
        <label asp-for="Notes">Notes</label>
        <input id="Notes" asp-for="Notes" />
    </div>

    <button type="submit">Add Movie</button>
    <button type="reset">Reset Form</button>

    <div asp-validation-summary="All"></div>


</form>